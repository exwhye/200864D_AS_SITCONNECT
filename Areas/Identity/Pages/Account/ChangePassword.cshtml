@page
@model _200864D_AS_SITCONNECT.Areas.Identity.Pages.Account.ChangePasswordModel
@{
}
<h4>@ViewData["Title"]</h4>
<script>
    function validatePswd() {
        var str = document.getElementById('password').value;
        const re = /^(?=.*?[A-Z])(?=(.*[a-z]){1,})(?=(.*[\d]){1,})(?=(.*[\W]){1,})(?!.*\s).{12,30}$/
        console.log(re.test(str))
        if (re.test(str) == false) {
            document.getElementById("passwordVal").innerHTML = "Password must Use combination of 12 characters, lower-case, upper-case, Numbers and special characters (client validation)";
            document.getElementById("passwordVal").style.color = "red";
        }
        else {
            document.getElementById("passwordVal").innerHTML = "Password is suitable (client validation)";
            document.getElementById("passwordVal").style.color = "green";
        }
    }
</script>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="change-password-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.OldPassword"></label>
                <input asp-for="Input.OldPassword" class="form-control"  />
                <span asp-validation-for="Input.OldPassword"  style="color:red"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.NewPassword"></label>
                <input asp-for="Input.NewPassword" class="form-control"  onkeyup="javascript:validatePswd()" id="password" />
                <span asp-validation-for="Input.NewPassword" id="passwordVal" style="color:red"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control"  onkeyup="javascript:validatePswd()" id="password"/>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Update password</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}